@page


@model RazorPages.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form method="get">
    <div class="input-group">
      <input  class="form-control" asp-for="search"/>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<table class="table table-hover">
    <tr>
        <th>id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
    </tr>
    @foreach (var item in Model.Employees)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Department</td>
            <td><a asp-page="Details" asp-route-Id="@item.Id">Details</a></td>
            <td><a asp-page="Edit" asp-route-Id="@item.Id">Edit</a></td>
            <td><a asp-page="Delete" asp-route-Id="@item.Id">Delete</a></td>
        </tr>
    }

</table>