@page "/employees/edit/{id?}"
@model RazorPages.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit";
    var pageheader = Model.employees.Id > 0 ? "Edit" : "Create";
}

    <h3>@pageheader</h3>


<form method="post">
    @*  <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <input asp-for=" employees.Id " class="control-label"/>
    <div class="form-group">
        <label asp-for=" employees.Name " class="control-label"></label>
        <input asp-for=" employees.Name" class="form-control" />
        <span asp-validation-for=" employees.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=" employees.Email" class="control-label"></label>
        <input asp-for=" employees.Email" class="form-control" />
        <span asp-validation-for=" employees.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="employees.Department" class="control-label"></label>
        <div class="col-sm-10">
            <select asp-for="employees.Department" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
        </div>
        <span asp-validation-for="employees.Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="save" class="btn btn-primary" />
        <a asp-page="/Employees/Index">Cancel</a>
    </div>
</form>